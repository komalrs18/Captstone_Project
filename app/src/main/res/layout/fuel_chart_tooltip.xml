<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingStart="@dimen/tool_tip_margin"
    android:paddingEnd="@dimen/tool_tip_margin">
    <TextView
        android:id="@+id/tool_tip_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/tool_tip_margin"
        android:layout_marginEnd="@dimen/tool_tip_margin"/>
    <TextView
        android:id="@+id/tool_tip_mpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tool_tip_value"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_marginEnd="@dimen/tool_tip_margin"
        android:text="@string/tool_tip_layout_mpg"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/tool_tip_mpg"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_local_gas_station_black_18dp"
        android:contentDescription="@string/tool_tip_mpg_icon_content_desc"/>
</RelativeLayout>